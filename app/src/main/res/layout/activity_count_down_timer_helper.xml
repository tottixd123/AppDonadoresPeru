<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.Reloj.CountDownTimerHelper">

    <LinearLayout
        android:id="@+id/nada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"

        android:animateLayoutChanges="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="3dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iconoCronometro"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:background="@drawable/cronoxd">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconoCronometro"
                android:paddingLeft="10dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:animateLayoutChanges="true"
                android:layout_toRightOf="@+id/iconoCronometro"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textoTiempoArriba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiempo restante para su próxima donación"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black">
                </TextView>
                <TextView
                    android:id="@+id/textViewCountdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:text="00:00:00">
                </TextView>
                <TextView
                    android:id="@+id/diasHrsMinSeg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="         Dias        Horas      Minutos    Segundos"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black">
                </TextView>
                <Button
                    android:id="@+id/buttonStartPause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prueba Inicio">
                </Button>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>