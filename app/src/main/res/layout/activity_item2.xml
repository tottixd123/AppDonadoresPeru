<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="DONACIONES"
        android:textColor="#020202"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="150dp"
        android:background="@color/light_blue"
        android:backgroundTint="#51BFAF"
        android:backgroundTintMode="multiply"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.048">

        <TextView
            android:id="@+id/ultima_don"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Ultima Donacion"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/lug_don"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugar de Ultima Donacion"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/hora_don"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora Aproximada de Ultima Donacion"
            android:textColor="@android:color/black"
            android:textSize="19sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>